
@model book.models.Campany
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Campany" : "New Campany";
}

<div class="alert text-center" role="alert">
    @title
</div>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="shadow">
        <partial name="BacktoList" />
        <div class="form-group">
            <div class="text-center">
                <label asp-for="Name"></label>
            </div>
            <div class="p-1 m-1">
                <div class="col-4 offset-4">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="StreetAddress"></label>
            </div>
            <div class="p-1 m-1">
                <div class="col-4 offset-4">
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="City"></label>
            </div>
            <div class="p-1 m-1">
                <div class="col-4 offset-4">
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="State"></label>
            </div>
            <div class="p-1 m-1">
                <div class="col-4 offset-4">
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="Postalcode"></label>
            </div>
            <div class="p-1 m-1">
                <div class="col-4 offset-4">
                    <input asp-for="Postalcode" class="form-control" />
                    <span asp-validation-for="Postalcode" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="p-1 m-1">
                <div class="col-4 offset-4">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <label asp-for="IsAuthorizedCompany"></label>
            </div>
            <div class="p-1 m-1">
                <div class="col-4 offset-6">
                    <input type="checkbox" asp-for="IsAuthorizedCompany" />
                    <span asp-validation-for="IsAuthorizedCompany" class="text-danger"></span>
                </div>
                <div class="col-4 offset-4"><h6>I decleared that this company is autorized company</h6></div>
            </div>
        </div>
        <div class="form-group row p-2 m-2">
            <div class="text-center ">
                @if (Model.Id != 0)
                {
                    <partial name="_EditAndBackToListButton" />
                }
                else
                {
                    <partial name="_CreateAndBackToListButton" />
                }
            </div>
        </div>
    </div>
</form>
@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

