@model IEnumerable<book.models.Product>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:4px solid #034851; border-radius: 5px; box-shadow">
                    <div class="card" style="border:0px;">
                        <img src="@product.Imageurl" class="card-img-top rounded" />
                        <div class="pl-1">
                            <small><p class="card-title text-center h5" style="color:white;">@product.Title</p>
                                <p class="card-title text-center">by <b>@product.Author</b></p></small>
                        </div>
                        <div style="padding-left:5px;" class="text-center">
                            <p>List Price: <strike><b class="">&#8377 @product.Listprice.ToString("0.00")</b></strike></p>
                            <p>As low as: <b class="">&#8377 @product.Price100.ToString("0.00")</b></p>
                        </div>
                    </div>
                    <div>
                        <br />
                        <a asp-action="Details" class="btn btn-outline-primary form-control" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>