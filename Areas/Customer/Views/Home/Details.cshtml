@model book.models.ShoppingCart
@{
    ViewData["Title"] = "Details";
}
<div class="">
    <partial name="BackToList" />
</div>
<div class="row">
    <div class="offset-1 col-4 border">
    <br/>
        <img src="@Model.Product.Imageurl" width="600" height="680" class="" />
</div>
<div class="offset-1 col-6">
<form method="post">
    <input type="hidden" asp-for="@Model.ProductId" />
    <div class="container">
        <div class="card">
            <div class="card-header text-light">
                <div class="text-center">
                    <h6 class="text-light text-center">@Model.Product.Title</h6>
                    
                </div>
             @* <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge badge-success pt-2" style="height:30px;">@Model.Product.coverType</span>
                    <span class="badge badge-warning pt-2" style="height:30px;">@Model.Product.category</span>
                </div> *@
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="">
                                    <p class="text-center">By : @Model.Product.Author</p>
                            <div class="row pl-2">
                                <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                                <h5 class="text-muted text-center">List Price: <strike>$ @Model.Product.Listprice</strike></h5>
                            </div>
                        <div class="text-center">
                            <div class="row">
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>Quantity</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>1-49</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>50-99</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary border-bottom">
                                    <div>100+</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:wheat; font-weight:bold">
                                <div class="p-1 col-2 bg-secondary">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>@Model.Product.Price</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>@Model.Product.Price50</div>
                                </div>
                                <div class="p-1 col-2 bg-secondary">
                                    <div>@Model.Product.Price100</div>
                                </div>
                            </div>
                        </div>
                            <div class="row pl-2">
                                <p class="text-secondary">@Html.Raw(Model.Product.Discription)</p>
                            </div>
                            <div class="row">
                                <div class="col-4"><h3 style="color: wheat; font-weight:bold">Quantity : </h3></div>
                                <div class="col-6"><input class="form-control" asp-for="@Model.Count" /></div>
                            </div>
                        </div>
                            </div>
                </div>
            </div>
            <div class="">
                <div class="">
                    <div class="">
                        <button type="submit" value="Add to Cart" class="btn btn-outline-primary btn-square btn-lg form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
    </div>
</div>

